package br.ufrpe.test;
import br.ufrpe.beans.Animal;
import br.ufrpe.repositorios.RepositorioAnimal;
public class testAnimal {
	public static void main(String[] args) {
		Animal a = new Animal(true, "Pastor Alemão", "Cachorro", "José", "101.575.184-93", 1.25f, 47.9f);
		System.out.println(a);
		System.out.println();
		Animal b = new Animal(true, "Pastor Alemão", "Cachorro", "Joao", "101.575.184-93", 1.25f, 47.9f);
		System.out.println(a.equals(b));
		System.out.println();
		RepositorioAnimal rep = new RepositorioAnimal(a);
		rep.adicionar(b);
		b.setAlive(false);
		System.out.println();
		System.out.println(a.equals(b));
		System.out.println(a.getDonoCPF());
		System.out.println(a.getDonoNome());
		System.out.println(a.getEspecie());
		System.out.println(a.getRaca());
		System.out.println(a.getIsAlive());
		System.out.println(a.getPeso());
		System.out.println(a.getTamanho());
		System.out.println();
		a.setAlive(false);
		a.setDonoCPF("316.147.364-72");
		a.setPeso(59.4f);
		a.setTamanho(1.4f);
		System.out.println(a.getIsAlive());
		System.out.println(a.getDonoCPF());
		System.out.println(a.getPeso());
		System.out.println(a.getTamanho());
		System.out.println(a);
		System.out.println();
		for (int i = 0; i < rep.Size(); i++) {
			System.out.println(rep.getPet(i));
			System.out.println();
		}
		rep.remover(rep.getPet(1));
		System.out.println();
		for (int i = 0; i < rep.Size(); i++) {
			System.out.println(rep.getPet(i));
			System.out.println();
		}
		rep.atualizar(a, b);
		for (int i = 0; i < rep.Size(); i++) {
			System.out.println(rep.getPet(i));
		}
		System.out.println("-----------------------------------------");
		RepositorioAnimal rep2 = new RepositorioAnimal(a);
		for (int i = 0; i < rep2.Size(); i++) {
			System.out.println(rep2.getPet(i));
			System.out.println();
		}
		rep2.remover(rep2.getPet(0));
		System.out.println();
		System.out.println("------------------");
		for (int i = 0; i < rep2.Size(); i++) {
			System.out.println(rep2.getPet(i));
			System.out.println();
		}
		rep2.atualizar(a, b);
		System.out.println("-------------------");
		System.out.println();
		for (int i = 0; i < rep2.Size(); i++) {
			System.out.println(rep2.getPet(i));
		}
	}
}