		RepositorioAnimal repoAnimal = RepositorioAnimal.getInstance();
		RepositorioCliente repoCliente = RepositorioCliente.getInstance();
		boolean state = true;
		
		
		do{
			Scanner sc = new Scanner(System.in);
			String answer = "";
			
			System.out.println("Deseja Adicionar um novo animal? (pet-cliente) (S/N)");
			answer = sc.next();
			
			if(answer.equals("S")|| answer.equals("s")){
				
				System.out.println("Digite o nome do cliente");
				
			}
			else{
				state = false;
			}
			
		}while(state);
		
		System.out.println("Saiu");
		
	}
